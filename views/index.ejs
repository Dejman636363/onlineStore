<body>
    <%- include("partials/navbar") %>
    <header>
        <div class="slide-box">
            <div class="slide slide-one">
                <img src="./img/watch.jpeg" alt="">
                <h3>Lorem, ipsum.</h3>
                <p>Lorem ipsum dolor sit amet consectetur.</p>
            </div>
            <div class="slide slide-two">
                <img src="https://static.zara.net/photos///contents/mkt/spots/ss23-north-woman-collection/subhome-xmedia-14//w/2880/IMAGE-landscape-fill-f730f86a-6a75-4546-9a3e-4b9d09800f18-default_0.jpg?ts=1680706119360" alt="">
                <h3>Lorem, ipsum.</h3>
                <p>Lorem ipsum dolor sit amet consectetur.</p>
            </div>
            <div class="slide slide-three">
                <img src="./img/product3.png" alt="">
                <h3>Lorem, ipsum.</h3>
                <p>Lorem ipsum dolor sit amet consectetur.</p>
            </div>
            <button class="prev-btn">&#10094;</button>
            <button class="next-btn">&#10095;</button>
        </div>
    </header>
    <section class="products newproducts wrapper" id="newproducts">
        <h2>New Products</h2>
		
        <div class="products-container">
			<% shuffleArray(products).forEach(function(product, index) { %> <% if (index < 6) { %>
				<form id="productForm<%= index %>" class="product-box" action="http://localhost:5500/product" method="POST" onclick="submitForm(event,'<%= index %>')">
					<input type="hidden" name="product" value="<%= JSON.stringify(product) %>">

					<input type="submit" value="WyÅ›lij" style="display: none;">
					<div class="product-img">
						<img src="<%= "/img/" + product.photoPath %>" alt="">
					</div>
					<div class="product-info">
						<h4 class="product-name"><%= product.name %></h4>
						<div class="product-rating">
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
						</div>
						<button class="add-product"><i class="fa-solid fa-cart-shopping"></i></button>
						<p class="product-price"><%= product.price %> $</p>
					</div>
				</form>
			<% } %> 
			<% }) %>
		</div>
            
    </section>


    <section id="newsletter" class="newsletter" class="wrapper">
        <div class="newsletter-text">
            <h4>Sign up for our newsletter</h4>
            <p>and get a <span>10% discount</span> on your first purchase</p>
        </div>
        <div class="newsletter-form">
            <input type="text" placeholder="Your e-mail address">
            <button>Sign Up</button>
        </div>
    </section>
    <section id="contactus" class="wrapper"></section>
